doctype html
title= title
|<link href="/static/css/bootstrap.min.css" rel="stylesheet">
|<link href="/static/css/shop-homepage.css" rel="stylesheet">
body
 include ./includes/navHome.jade
 div.container
  div.row
  if error_message.length != ''
    h4(style="color:red") #{error_message}
  if message.length != ''
    h4 #{message}
  div.row
   h4 Already a User ? Please Authenticate
   hr
   div.col-md-5
    form(action="/login" method="post")
     div.form-group
      label(for="username") Name:
      input(type="text" class="form-control" id="username" name="username" placeholder="Enter display name")
     div.form-group
      label(for="password") Password:
      input(type="password" class="form-control" id="password" name="password" placeholder="Enter password")
     button.btn.btn-primary.pull-right(type="submit") Login
      span.glyphicon.glyphicon-chevron-right
include ./includes/footer.jade
